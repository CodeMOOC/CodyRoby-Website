---
import Layout from '~/layouts/PageLayout.astro';
import { Image } from 'astro:assets';

import Hero from '~/components/widgets/Hero.astro';
import Button from '~/components/ui/Button.astro';
import FAQs from '~/components/widgets/FAQs.astro';

import kindergardern from '~/assets/images/home/kindergarden.webp';
import primaria from '~/assets/images/home/primaria.webp';
import medie from '~/assets/images/home/medie.webp';

// import banner from '~/assets/images/banner.png';
// import banner from '~/assets/images/home/arrows.webp';
import { decode } from 'blurhash';
import banner from '~/assets/images/home/arrows.png';
import AnimateText from '~/components/ui/AnimateText.astro';

const metadata = {
  title: 'CodyRoby',
  tagline: 'Metodi',
  ignoreTitleTemplate: true,
};

const pixels = decode('LTJt^__No}bF%~oxadtS?axbg3Ri', 32, 32);

const codyRobyCard = 'CodyRobyCards.pdf';
---

<Layout metadata={metadata}>
  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Scarica ora',
        href: codyRobyCard,
        target: '_blank',
        icon: 'tabler:download',
      },
      { text: 'Scopri di più', href: '/codyroby' },
    ]}
    image={{ src: banner, alt: 'CodyRoby' }}
  >
    <Fragment slot="title">
      <span class="text-[#477DFD] highlight">Cody</span> è un coder<br />
      <span class="text-[#477DFD]">Roby</span> è un robot
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        <span class="font-semibold">CodyRoby</span> è un metodo fai-da-te di programmazione unplugged (senza computer).</span
      >
      <span class="block mb-1 sm:hidden font-bold text-blue-600">Cody concatena istruzioni che Roby esegue.</span>
    </Fragment>
  </Hero>

  <div class="flex justify-center items-center gap-8 mx-4 md:mx-24 mt-10">
    <div class="max-w-[1200px] flex flex-col md:flex-row gap-6">
      <AnimateText>
        <div
          class="flex flex-col justify-center gap-4 bg-[#fff3c4] hover:bg-[#FFFF00] hover:transition-all rounded-lg drop-shadow-xl border border-black"
        >
          <a href={'toolkit/infanzia'}>
            <Image
              src={kindergardern}
              class="w-full md:h-full rounded-t-lg rounded-br-2xl shadow-lg"
              widths={[400, 900]}
              width={400}
              sizes="(max-width: 900px) 400px, 900px"
              alt={'infanzia'}
              loading="lazy"
              decoding="async"
            />
            <div class="px-6 py-4">
              <h3 class="text-[#000000] font-semibold text-center font-heading">Toolkit Infanzia</h3>
              <!-- <p class="text-slate-950 text-sm">Scopri di più</p> -->
            </div>
          </a>
        </div>
      </AnimateText>

      <AnimateText>
        <div
          class="flex flex-col justify-center gap-4 bg-[#c6ffc4] hover:bg-[#7fff3e] hover:transition-all rounded-lg drop-shadow-xl border border-black"
        >
          <a href={'toolkit/primaria'}>
            <Image
              src={primaria}
              class="w-full md:h-full rounded-t-lg rounded-br-2xl shadow-lg"
              widths={[400, 900]}
              width={400}
              sizes="(max-width: 900px) 400px, 900px"
              alt={'infanzia'}
              loading="lazy"
              decoding="async"
            />
            <div class="px-6 py-4">
              <h3 class="text-[#000000] font-semibold text-center font-heading">Toolkit Primaria</h3>
              <!-- <p class="text-slate-600 text-sm">Scopri di più</p> -->
            </div>
          </a>
        </div>
      </AnimateText>

      <AnimateText>
        <div
          class="flex flex-col justify-center gap-4 bg-[#F7E8E5] hover:bg-[#fc6240] hover:transition-all rounded-lg drop-shadow-xl border border-black"
        >
          <a href={'toolkit/secondaria'}>
            <Image
              src={medie}
              class="w-full md:h-full rounded-t-lg rounded-br-2xl shadow-lg"
              widths={[400, 900]}
              width={400}
              sizes="(max-width: 900px) 400px, 900px"
              alt={'infanzia'}
              loading="lazy"
              decoding="async"
            />
            <div class="px-6 py-4">
              <h3 class="text-[#000000] font-semibold text-center font-heading">Toolkit Secondaria</h3>
              <!-- <p class="text-slate-600 text-sm">Scopri di più</p> -->
            </div>
          </a>
        </div>
      </AnimateText>
    </div>
  </div>

