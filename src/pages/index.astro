---
import Layout from '~/layouts/PageLayout.astro';
import { Image } from 'astro:assets';

import Hero from '~/components/widgets/Hero.astro';
import Button from '~/components/ui/Button.astro';
import FAQs from '~/components/widgets/FAQs.astro';

import kindergardern from '~/assets/images/home/kindergarden.webp';
import primaria from '~/assets/images/home/primaria.webp';
import medie from '~/assets/images/home/medie.webp';

// import banner from '~/assets/images/banner.png';
// import banner from '~/assets/images/home/arrows.webp';
import banner from '~/assets/images/home/arrows.png';

const metadata = {
  title: 'CodyRoby',
  tagline: 'Metodi',
  ignoreTitleTemplate: true,
};

const codyRobyCard = 'CodyRobyCards.pdf';
---

<Layout metadata={metadata}>
  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Scarica ora',
        href: codyRobyCard,
        target: '_blank',
        icon: 'tabler:download',
      },
      { text: 'Scopri di più', href: '/codyroby' },
    ]}
    image={{ src: banner, alt: 'CodyRoby' }}
  >
    <Fragment slot="title">
      <span class="text-[#477DFD] highlight">Cody</span> è un coder<br />
      <span class="text-[#477DFD]">Roby</span> è un robot
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        <span class="font-semibold">CodyRoby</span> è un metodo fai-da-te di programmazione unplugged (senza computer).</span
      >
      <span class="block mb-1 sm:hidden font-bold text-blue-600">Cody concatena istruzioni che Roby esegue.</span>
    </Fragment>
  </Hero>

  <div class="flex flex-col md:flex-row justify-center items-center gap-8 mx-4 md:mx-24">
    <div class="flex flex-col justify-center gap-4">
      <a href={'/toolkit/infanzia'}>
        <Image
          src={kindergardern}
          class="w-full md:h-full rounded shadow-lg bg-gray-400 dark:bg-slate-700"
          widths={[400, 900]}
          width={400}
          sizes="(max-width: 900px) 400px, 900px"
          alt={'infanzia'}
          loading="lazy"
          decoding="async"
        />
        <Button class={`md:px-3 px-3 bg-[#eee9c36b] border-[#f7c656]`}>
          <p class="text-[#f7c656]">Toolkit Infanzia</p>
        </Button>
      </a>
    </div>
    <div class="flex flex-col justify-center gap-4">
      <a href={'/toolkit/primaria'}>
        <Image
          src={primaria}
          class="w-full md:h-full rounded shadow-lg bg-gray-400 dark:bg-slate-700"
          widths={[400, 900]}
          width={400}
          sizes="(max-width: 900px) 400px, 900px"
          alt={'infanzia'}
          loading="lazy"
          decoding="async"
        />
        <Button class={`md:px-3 px-3 bg-[#c8eec36b] border-[#06d6a0]`}>
          <p class="text-[#06d6a0]">Toolkit Primaria</p>
        </Button>
      </a>
    </div>
    <div class="flex flex-col justify-center gap-4">
      <a href={'/toolkit/secondaria'}>
        <Image
          src={medie}
          class="w-full md:h-full rounded shadow-lg bg-gray-400 dark:bg-slate-700"
          widths={[400, 900]}
          width={400}
          sizes="(max-width: 900px) 400px, 900px"
          alt={'infanzia'}
          loading="lazy"
          decoding="async"
        />
        <Button class={`md:px-3 px-3 bg-[#eecbc36b] border-[#ef476f]`}>
          <p class="text-[#ef476f]">Toolkit Secondaria</p>
        </Button>
      </a>
    </div>
  </div>

